<script>
    <!-- 수정 완료 -->

    function EditDone() {
        function navigateToSubmit() {
            const form = document.getElementById('portfolioForm');
            const introField = document.querySelector('textarea[name="intro"]');

            if (!introField.value.trim()) {
                introField.value = "소개 글이 없습니다.";
            }

            form.submit();
        }
    }

